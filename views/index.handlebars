<div class="container">
  <div class="burgers-container">

    <div class="not-devoured">
      <h2> Burgers that are not eaten!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{>burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="devoured">
      <h2>Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="add-a-burger-container">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group col">
        {{!-- <label for="burg">Burger Name:</label> --}}
        <textarea id="burg" name="name" rows="2" cols="40">
          </textarea>
      </div>

      {{!-- <div class="form-group">
        <label for="devoured">Is it devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Not eaten!<br>
        <input type="radio" name="devoured" value="0"> Devoured!
      </div> --}}

      <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
  </div>
</div>