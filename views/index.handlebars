<h1>Burgers!</h1>

<h2>Burgers that are not eaten</h2>
<ul>
  {{#each burgers}}
    	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Burger:</span> {{this.burger_name}}</p>
      <p><span class="label">Devoured:</span> {{this.devoured}}</p>

      <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>

      <a href="/{{this.id}}">Update this burger</a>
  	</li>

  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not eaten
  </div>

  <button type="submit">Add Burger</button>
</form>